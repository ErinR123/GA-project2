<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <link rel="stylesheet"  href="/stylesheets.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
      />
    <title>mindfullness</title>
</head>
<body>
    
    <div id="card" class="card text-center">
        <div class="card-header">
           
        </div>
        <div class="card-body">
          <p class="card-text"><img id="mindfulnessImage" src="images/mindfulnessImage.png" alt=""></p>
  
          <!-- Inserted form here -->
          <form action="/mindfullness" method="POST">
              <div class="form-group">
                  <label for="mindfulnessOption">Mindfulness Option</label>
                  <select class="form-control" name="mindfulnessOption" id="mindfulnessOption">
                      <% options.forEach(option => { %>
                          <option value="<%= option %>"><%= option %></option>
                      <% }) %>
                  </select>
              </div>
              <div class="form-group">
                  <label for="dayOfWeekOption">Day of the Week</label>
                  <select class="form-control" name="dayOfWeekOption" id="dayOfWeekOption">
                      <% weekOptions.forEach(dayOption => { %>
                          <option value="<%= dayOption %>"><%= dayOption %></option>
                      <% }) %>
                  </select>
              </div>
              <button type="submit" class="btn btn-primary">Add</button>
          </form>
  
        </div>
        <div class="card-footer text-muted">
           
        </div>
      </div>
    
</body>
</html>